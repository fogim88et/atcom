		<sp:obj>
			<op:sTxt>
				<sc:para xml:space="preserve" sc:id="t26">
					<sc:inlineStyle role="emp" sc:id="t53">Concepts </sc:inlineStyle>: </sc:para>
				<sc:itemizedList sc:id="t37">
					<sc:listItem sc:id="t38">
						<sc:para xml:space="preserve" sc:id="t54">Distribution Statistique. Moyenne et Dispersion.</sc:para>
					</sc:listItem>
					<sc:listItem sc:id="t82">
						<sc:para xml:space="preserve">Régression linéaire</sc:para>
					</sc:listItem>
					<sc:listItem sc:id="t39">
						<sc:para xml:space="preserve" sc:id="t27">Probabilité associée à un événement.</sc:para>
					</sc:listItem>
					<sc:listItem sc:id="t40">
						<sc:para xml:space="preserve" sc:id="t28">Variable aléatoire discrète et continue.</sc:para>
					</sc:listItem>
					<sc:listItem sc:id="t41">
						<sc:para xml:space="preserve" sc:id="t29">Modèles théoriques discrets : loi binômiale, loi de poisson.</sc:para>
					</sc:listItem>
					<sc:listItem sc:id="t42">
						<sc:para xml:space="preserve" sc:id="t30">Modèles théoriques continus : loi exponentielle, loi de gauss ou loi normale, modèle de Weibull.</sc:para>
					</sc:listItem>
					<sc:listItem sc:id="t43">
						<sc:para xml:space="preserve" sc:id="t31">Statistique inférentielle : théorie de l'échantillonnage .</sc:para>
					</sc:listItem>
				</sc:itemizedList>
				<sc:para xml:space="preserve" sc:id="t32">
					<sc:inlineStyle role="emp" sc:id="t55">Applications </sc:inlineStyle>: </sc:para>
				<sc:itemizedList sc:id="t45">
					<sc:listItem sc:id="t46">
						<sc:para xml:space="preserve" sc:id="t56">Production et Qualité : SPC, test de réception.</sc:para>
					</sc:listItem>
					<sc:listItem sc:id="t47">
						<sc:para xml:space="preserve" sc:id="t33">Bureau d'études et méthodes : test de durée de vie</sc:para>
					</sc:listItem>
					<sc:listItem sc:id="t48">
						<sc:para xml:space="preserve" sc:id="t34">Maintenance : Fiabilité associée à une mission, évaluation des risques (criticité), gestion de stock (risque de rupture), Maintenance préventive (calcul de périodicité, usure)</sc:para>
					</sc:listItem>
					<sc:listItem sc:id="t49">
						<sc:para xml:space="preserve" sc:id="t35">Vie courante : sondages d'opinion.</sc:para>
					</sc:listItem>
					<sc:listItem sc:id="t50">
						<sc:para xml:space="preserve" sc:id="t36">Mesure : incertitude absolue et relative.</sc:para>
					</sc:listItem>
				</sc:itemizedList>
			</op:sTxt>
