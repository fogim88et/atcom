										<sc:cell sc:id="t27">
											<sc:para sc:id="t133">
												<sc:inlineStyle role="emp">Si X et Y sont des ensembles finis</sc:inlineStyle>
											</sc:para>
										</sc:cell>
										<sc:cell sc:id="t28">
											<sc:para sc:id="t159">
												<sc:inlineImg role="form" sc:id="t172" sc:refUri="/D/DS/ressources_alternatives/denombrement_sinclusion_exclusion.odf"/>
											</sc:para>
										</sc:cell>
										<sc:cell sc:id="t29">
											<sc:para sc:id="t173">Un marchand de voitures d'occasion propose à la vente :</sc:para>
											<sc:para sc:id="t174">- 12 voitures fonctionnant au gazole</sc:para>
											<sc:para sc:id="t175">- 8 voitures climatisées</sc:para>
											<sc:para sc:id="t176">- 3 voitures fonctionnant au gazole et climatisées.</sc:para>
											<sc:para sc:id="t177">Il propose donc : 12 + 8 - 3 = 17 voitures fonctionnant au gazole ou climatisées.</sc:para>
										</sc:cell>
