	<op:cloze xmlns:sp="http://www.utc.fr/ics/scenari/v3/primitive" xmlns:op="utc.fr:ics/opale3" xmlns:sc="http://www.utc.fr/ics/scenari/v3/core">
		<op:exeM>
			<sp:title>Les taux intermédiaires</sp:title>
		</op:exeM>
		<sc:question>
			<op:res>
				<sp:txt>
					<op:txt>
						<sc:para sc:id="t3">D'après l'exemple précédent, nous avons</sc:para>
					</op:txt>
				</sp:txt>
				<sp:txt>
					<op:txt>
						<sc:table role="" sc:id="t276">
							<sc:caption xml:space="preserve" sc:id="t277">Etat des données à l'issue de la Question 5</sc:caption>
							<sc:column sc:id="t278" width="16"/>
							<sc:column sc:id="t279" width="16"/>
							<sc:column sc:id="t280" width="22"/>
							<sc:row sc:id="t281">
								<sc:cell sc:id="t282">
									<sc:para xml:space="preserve" sc:id="t283">TO = 24 h</sc:para>
								</sc:cell>
								<sc:cell sc:id="t284"/>
								<sc:cell sc:id="t285">
									<sc:para xml:space="preserve" sc:id="t380"><sc:uLink role="glos" sc:id="t385" sc:refUri="/1B_op/M/TUV/TRG/TRG.ref">TRG</sc:uLink> = 54%</sc:para>
								</sc:cell>
							</sc:row>
							<sc:row sc:id="t286">
								<sc:cell sc:id="t287">
									<sc:para xml:space="preserve" sc:id="t288">TB = 17 h</sc:para>
								</sc:cell>
								<sc:cell sc:id="t289">
									<sc:para xml:space="preserve" sc:id="t290">AI = 7 h</sc:para>
								</sc:cell>
								<sc:cell sc:id="t291">
									<sc:para xml:space="preserve" sc:id="t292">
										<sc:uLink role="glos" sc:id="t192" sc:refUri="/1B_op/M/TUV/TRG/txB.ref">TxB</sc:uLink> = <sc:inlineStyle role="emp" sc:id="t372">? ? ?</sc:inlineStyle>
									</sc:para>
								</sc:cell>
							</sc:row>
							<sc:row sc:id="t293">
								<sc:cell sc:id="t294">
									<sc:para xml:space="preserve" sc:id="t295">TN = 15 h</sc:para>
								</sc:cell>
								<sc:cell sc:id="t296">
									<sc:para xml:space="preserve" sc:id="t297">EP = 2 h</sc:para>
