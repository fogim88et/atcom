								<sc:cell sc:id="t298">
									<sc:para xml:space="preserve" sc:id="t299">
										<sc:uLink role="glos" sc:id="t348" sc:refUri="/1B_op/M/TUV/TRG/txP.ref">TxP</sc:uLink> = <sc:inlineStyle role="emp" sc:id="t373">? ? ?</sc:inlineStyle>
									</sc:para>
