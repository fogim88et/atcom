					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t9">
<sc:uLink role="glos" sc:id="t10" sc:refUri="/1B_op/S/stock/CSM.ref">Coût de Stockage Maintenance (CSM)</sc:uLink> = <sc:uLink role="glos" sc:id="t11" sc:refUri="/1B_op/S/stock/CSM_adm.ref">Coût Administratif des Approvisionnements (Cadm)</sc:uLink> + <sc:uLink role="glos" sc:id="t12" sc:refUri="/1B_op/S/stock/cpos.ref">Coût de Possession des stocks (Cpos)</sc:uLink>
</sc:para>
