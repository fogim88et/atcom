						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t71">Les rubriques du compte-rendu doivent être <sc:inlineStyle role="emp">TOUTES REMPLIES</sc:inlineStyle>
</sc:para>
								<sc:para xml:space="preserve" sc:id="t72">Les phrases doivent être <sc:inlineStyle role="emp">CONCISES</sc:inlineStyle>
</sc:para>
								<sc:para xml:space="preserve" sc:id="t73">Les mots doivent être <sc:inlineStyle role="emp">PRECIS</sc:inlineStyle>
</sc:para>
								<sc:para xml:space="preserve" sc:id="t74">Les lettres doivent être bien <sc:inlineStyle role="emp">FORMEES (LISIBLES par tous)</sc:inlineStyle>
</sc:para>
							</op:txt>
