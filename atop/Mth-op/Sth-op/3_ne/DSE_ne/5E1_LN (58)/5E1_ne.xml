				<sp:def>
					<op:pbTi>
						<sp:title>Paramètres, densité de probabilité et fonction de répartition</sp:title>
					</op:pbTi>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:table role="" sc:id="t44">
									<sc:column sc:id="t45" width="50"/>
									<sc:column sc:id="t95" width="50"/>
									<sc:row sc:id="t47">
										<sc:cell sc:id="t48">
											<sc:para xml:space="preserve" sc:id="t60">
														<sc:inlineStyle role="emp" sc:id="t106">Paramètres</sc:inlineStyle>:</sc:para>
											<sc:para xml:space="preserve" sc:id="t96">
														<sc:inlineImg role="form" sc:id="t82" sc:refUri="/Mth-op/Sth-op/1B2/S/5E_modeles/5E1-LN/LN_param_liste.odf"/>
													</sc:para>
										</sc:cell>
										<sc:cell sc:id="t97">
											<sc:para xml:space="preserve" sc:id="t84">
														<sc:inlineImg role="form" sc:id="t88" sc:refUri="/Mth-op/Sth-op/1B2/S/5E_modeles/5E1-LN/LN_param.odf"/>
													</sc:para>
										</sc:cell>
									</sc:row>
									<sc:row sc:id="t50">
										<sc:cell sc:id="t51">
											<sc:para xml:space="preserve" sc:id="t64">
														<sc:inlineStyle role="emp" sc:id="t107">Densité de probabilité</sc:inlineStyle>
													</sc:para>
										</sc:cell>
										<sc:cell sc:id="t98">
											<sc:para xml:space="preserve" sc:id="t85">
														<sc:inlineImg role="form" sc:id="t89" sc:refUri="/Mth-op/Sth-op/1B2/S/5E_modeles/5E1-LN/LN_f(x).odf"/>
													</sc:para>
										</sc:cell>
									</sc:row>
									<sc:row sc:id="t53">
										<sc:cell sc:id="t54">
											<sc:para xml:space="preserve" sc:id="t68">
														<sc:inlineStyle role="emp" sc:id="t108">Fonction de répartition</sc:inlineStyle>
													</sc:para>
										</sc:cell>
										<sc:cell sc:id="t99">
											<sc:para xml:space="preserve" sc:id="t86">F(x) est une intégrale de f(x).dx</sc:para>
										</sc:cell>
									</sc:row>
								</sc:table>
							</op:txt>
						</sp:txt>
