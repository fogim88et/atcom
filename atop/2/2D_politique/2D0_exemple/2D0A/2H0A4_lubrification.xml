							<op:txt>
								<sc:para xml:space="preserve" sc:id="t19">Avait-on fait les vidanges</sc:para>
								<sc:para xml:space="preserve" sc:id="t20">Au bon moment ?</sc:para>
								<sc:para xml:space="preserve" sc:id="t21">Avec les bonnes huiles ?</sc:para>
								<sc:para xml:space="preserve" sc:id="t22">Dans de bonnes conditions ?</sc:para>
								<sc:para xml:space="preserve" sc:id="t23">... on ne sait pas exactement ...</sc:para>
							</op:txt>
						</sp:txt>
						<sp:res sc:refUri="/00_atopale_ext/0F_img/2H/07_reviser/7_4.odg">
