<?xml version="1.0" encoding="UTF-8"?>
<sc:item xmlns:sc="http://www.utc.fr/ics/scenari/v3/core">
	<op:practUc xmlns:sp="http://www.utc.fr/ics/scenari/v3/primitive" xmlns:op="utc.fr:ics/opale3">
		<op:exeM>
			<sp:title>EXR-49  : Fiabilité</sp:title>
		</op:exeM>
		<sp:desc>
			<op:res>
				<sp:txt>
					<op:txt>
						<sc:para xml:space="preserve" sc:id="t3">L'étude de la fiabilité des patins à aiguille &quot;Nadella&quot; 12.30 qui équipent une table à affûter les fraises conduit à étudier la durée de vie (<sc:inlineStyle role="emp" sc:id="t4">ttf</sc:inlineStyle> de 24 patins)</sc:para>
					</op:txt>
				</sp:txt>
				<sp:int sc:refUri="/0C-src/src/0G_ods/007/src_7_1.ods">
					<op:instructionM/>
				</sp:int>
			</op:res>
		</sp:desc>
		<sp:quest>
			<op:practUcQ>
				<sp:desc>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t10">Combien de composants ont dépassés 5000 heures de fonctionnement.</sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:desc>
			</op:practUcQ>
		</sp:quest>
		<sp:quest>
			<op:practUcQ>
				<sp:desc>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t16">En déduire la fiabilité à t=5000 heures ou encore la probabilité de réussir une mission de 5000 heures de fonctionnement.</sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:desc>
			</op:practUcQ>
		</sp:quest>
		<sp:quest>
			<op:practUcQ>
				<sp:desc>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t22">Calculer le taux de défaillance entre 400 et 500 heures</sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:desc>
			</op:practUcQ>
		</sp:quest>
		<sp:quest>
			<op:practUcQ>
				<sp:desc>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t28">Calculer le taux de défaillance entre 900 et 1200 heures</sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:desc>
			</op:practUcQ>
		</sp:quest>
		<sp:quest>
			<op:practUcQ>
				<sp:desc>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t34">Pensez qu'il soit judicieux de proposer une garantie de 5000 heures à vos clients ? </sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:desc>
			</op:practUcQ>
		</sp:quest>
		<sp:desc>
			<op:res>
				<sp:txt>
					<op:txt>
						<sc:para xml:space="preserve" sc:id="t46">Nous allons maintenant examiner de plus près l'usure de ce composant pour juger si celle-ci permets ou non d'identifier la fin de vie utile du composant.</sc:para>
					</op:txt>
				</sp:txt>
			</op:res>
		</sp:desc>
		<sp:quest>
			<op:practUcQ>
				<sp:desc>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t40">Tracer les courbes R(t) et Lambda(t).</sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:desc>
			</op:practUcQ>
		</sp:quest>
	</op:practUc>
</sc:item>