<?xml version="1.0" encoding="UTF-8"?>
<sc:item xmlns:sc="http://www.utc.fr/ics/scenari/v3/core">
	<op:practUc xmlns:op="utc.fr:ics/opale3" xmlns:sp="http://www.utc.fr/ics/scenari/v3/primitive">
		<op:exeM>
			<sp:title>80-td : Base de calcul (Gauss)</sp:title>
			<sp:info>
				<op:info>
					<sp:keywds>
						<op:keywds>
							<sp:keywd>Statistiques (Modèles)</sp:keywd>
							<sp:keywd>Loi Normale</sp:keywd>
						</op:keywds>
					</sp:keywds>
				</op:info>
			</sp:info>
		</op:exeM>
		<sp:idint sc:refUri="/0_id/ex/61-90/080-exr.xml"/>
		<sp:desc>
			<op:sTitle>
				<sc:fullTitle>Description de la Variable étudiée.</sc:fullTitle>
			</op:sTitle>
			<op:res>
				<sp:txt>
					<op:txt>
						<sc:para xml:space="preserve" sc:id="t36">On considère que la variable X définie par &quot;Taille d'une population adulte&quot; suit une <sc:uLink role="ucLnk" sc:id="t133" sc:refUri="/D/DS/3_ne/DSE_ne/5E1_LN (58)/5E1_ne.xml">loi normale</sc:uLink> de moyenne 176 cm et d'écart-type 10 cm.</sc:para>
						<sc:para xml:space="preserve" sc:id="t123">La variable est <sc:inlineStyle role="emp" sc:id="t124">continue </sc:inlineStyle>: cela signifie que les inégalités n'ont pas d'importance : <sc:inlineStyle role="emp" sc:id="t125">p(X&gt;=160)=p(X&gt;160)</sc:inlineStyle>
</sc:para>
						<sc:para xml:space="preserve" sc:id="t126">On résume par X--&gt;LN(176 ;10)</sc:para>
						<sc:para xml:space="preserve" sc:id="t127">On peut utiliser pour les calculs la <sc:uLink role="ucLnk" sc:id="t64" sc:refUri="/D/DS/3_ne/DSE_ne/5E1_LN (58)/5E1A_ne.xml">LNCR</sc:uLink> (voir table ci-dessous)</sc:para>
					</op:txt>
				</sp:txt>
				<sp:res sc:refUri="/00_atopale_ext/0F_img/5_stat/5E1-5E2-LN/ne_LNCR_table.png">
					<op:resInfoM>
						<sp:index>img</sp:index>
					</op:resInfoM>
				</sp:res>
				<sp:txt>
					<op:txt>
						<sc:para xml:space="preserve" sc:id="t135">ou le programme exécutable labview.</sc:para>
					</op:txt>
				</sp:txt>
			</op:res>
		</sp:desc>
		<sp:quest>
			<op:practUcQ>
				<sp:desc>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t102">Quelle est la probabilité qu'un individu soit plus petit que 164 cm.</sc:para>
								<sc:para xml:space="preserve" sc:id="t103">On résume par p(X&lt;=164)</sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:desc>
				<sp:sol>
					<op:pb>
						<sp:info>
							<op:pbTi>
								<sp:title>Programme exécutable labview</sp:title>
							</op:pbTi>
							<op:res>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve" sc:id="t43">p(X&lt;164)=F(X=164)=0,116</sc:para>
									</op:txt>
								</sp:txt>
							</op:res>
						</sp:info>
						<sp:info>
							<op:pbTi>
								<sp:title>Utilisation de la table</sp:title>
							</op:pbTi>
							<op:res>
								<sp:txtRes>
									<op:txtRes>
										<op:txtResM>
											<sp:pos>lft</sp:pos>
										</op:txtResM>
										<sp:txt>
											<op:txt>
												<sc:para xml:space="preserve" sc:id="t86">On calcule la <sc:uLink role="glos" sc:id="t73" sc:refUri="/1B_op/S/VCR.ref">VCR</sc:uLink> t = (164-176)/10 =- 1,2</sc:para>
												<sc:para xml:space="preserve" sc:id="t87">t étant négatif, on ne trouve dans la table que F(1,2)=p(t&lt;1,2)=0,8849.</sc:para>
												<sc:para xml:space="preserve" sc:id="t154">on a donc p(t&lt;-1,2)=1-F(1,2)=0,1151</sc:para>
											</op:txt>
										</sp:txt>
										<sp:img sc:refUri="/00_atopale_ext/0F_img/5_stat/5E1-5E2-LN/ne_lncr_proba_t_inf.jpg"/>
									</op:txtRes>
								</sp:txtRes>
							</op:res>
						</sp:info>
					</op:pb>
				</sp:sol>
			</op:practUcQ>
		</sp:quest>
		<sp:quest>
			<op:practUcQ>
				<sp:desc>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t104">Quelle est la probabilité qu'un individu soit plus grand que 190 cm.</sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:desc>
				<sp:hint>
					<op:res>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>lft</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve" sc:id="t149">On résume par p(X&gt;190)</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/00_atopale_ext/0F_img/5_stat/5E1-5E2-LN/ne_lncr_proba_t_sup.jpg"/>
							</op:txtRes>
						</sp:txtRes>
					</op:res>
				</sp:hint>
				<sp:hint>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t116">p(X&gt;190)=1-F(190)</sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:hint>
				<sp:sol>
					<op:pb>
						<sp:info>
							<op:pbTi/>
							<op:res>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve" sc:id="t54"> A l'aide du programme LABVIEW, on lit F(190)=0,92, soit p(X&gt;190)=8%</sc:para>
										<sc:para xml:space="preserve" sc:id="t55">Avec les tables, on a t=(190-176)/10=1,4. F(1,4)=0,9192, soit p(t&gt;1,4)=8,08%</sc:para>
									</op:txt>
								</sp:txt>
							</op:res>
						</sp:info>
					</op:pb>
				</sp:sol>
			</op:practUcQ>
		</sp:quest>
		<sp:quest>
			<op:practUcQ>
				<sp:desc>
					<op:res>
						<sp:txt>
							<op:txt>
								<sc:para xml:space="preserve" sc:id="t112">Quelle est la probabilité qu'un individu se trouve dans l'intervalle [ 174 cm, 182 cm].</sc:para>
							</op:txt>
						</sp:txt>
					</op:res>
				</sp:desc>
				<sp:hint>
					<op:res>
						<sp:txtRes>
							<op:txtRes>
								<op:txtResM>
									<sp:pos>lft</sp:pos>
								</op:txtResM>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve" sc:id="t147">On cherche p(174&lt;X&lt;182).</sc:para>
										<sc:para xml:space="preserve">Attention, l'intervalle n'est pas centré sur la moyenne.</sc:para>
									</op:txt>
								</sp:txt>
								<sp:img sc:refUri="/00_atopale_ext/0F_img/5_stat/5E1-5E2-LN/ne_lncr_prob_intervalle.jpg"/>
							</op:txtRes>
						</sp:txtRes>
					</op:res>
				</sp:hint>
				<sp:sol>
					<op:pb>
						<sp:info>
							<op:pbTi/>
							<op:res>
								<sp:txt>
									<op:txt>
										<sc:para xml:space="preserve" sc:id="t117">p(174&lt;X&lt;182)=F(182)-F(174)</sc:para>
									</op:txt>
								</sp:txt>
							</op:res>
						</sp:info>
					</op:pb>
				</sp:sol>
			</op:practUcQ>
		</sp:quest>
	</op:practUc>
</sc:item>